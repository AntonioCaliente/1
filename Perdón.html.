    <p>Â¡Hola amor! CometÃ­ un error y quiero pedirte perdÃ³n. Â¿Me perdonas?</p>
    <div class="button-container">
        <button class="btn-yes" onclick="showForgivenessMessage()">SÃ­</button>
        <button class="btn-no" onclick="swapButtons()">No</button>
    </div>
    <p id="forgiveness-message" style="display: none; font-weight: bold; margin-top: 20px;">SabÃ­a que me perdonarÃ­as. ðŸ˜Š</p>

    <script>
        function showForgivenessMessage() {
            document.getElementById("forgiveness-message").style.display = "block";
        }

        function swapButtons() {
            const btnYes = document.querySelector(".btn-yes");
            const btnNo = document.querySelector(".btn-no");
            btnYes.style.transform = "scale(1.2)";
            btnNo.style.marginLeft = "0";
            const randomPosition = getRandomPosition();
            btnNo.style.left = randomPosition.left;
            btnNo.style.top = randomPosition.top;
        }

        function getRandomPosition() {
            const positions = [
                { left: "10px", top: "10px" },
                { left: "calc(100% - 110px)", top: "10px" },
                { left: "10px", top: "calc(100% - 110px)" },
                { left: "calc(100% - 110px)", top: "calc(100% - 110px)" }
            ];
            return positions[Math.floor(Math.random() * positions.length)];
        }
    </script>
